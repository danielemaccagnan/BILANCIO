<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Tema predefinito (chiaro) -->
    <style name="Theme.BILANCIO" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Colori predefiniti -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Aggiungi altri attributi di stile se necessario -->
        <!-- Imposta lo sfondo su bianco -->
        <item name="android:windowBackground">@android:color/white</item>
    </style>

    <!-- Tema scuro -->
    <style name="Theme.BILANCIO.Dark" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Colori per il tema scuro -->
        <item name="colorPrimary">@color/dark_purple_200</item>
        <item name="colorPrimaryVariant">@color/dark_purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/dark_teal_200</item>
        <item name="colorSecondaryVariant">@color/dark_teal_200</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Aggiungi altri attributi di stile se necessario -->
    </style>

</resources>
