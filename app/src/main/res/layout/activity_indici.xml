            android:layout_height="53dp"
            android:translationY="-50dp"
            android:text="INDICI DI BILANCIO"
            android:textColor="#1e90ff"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="76dp"
            android:layout_gravity="center"
            android:text="INDICI DI SOLIDITÀ"
            android:textColor="#007AFF"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="INDEBITAMENTO GLOBALE"
            android:textColor="#FF0000"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/capitale_di_terzi_ind_globale"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Capitale di terzi"
            android:inputType="numberDecimal|numberSigned"
            android:minHeight="48dp" />

        <EditText
            android:id="@+id/patrimonio_netto_ind_globale"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Patrimonio netto"
            android:inputType="numberDecimal|numberSigned"
            android:minHeight="48dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="INDEBITAMENTO STRUTTURALE"
            android:textColor="#FF0000"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/banca_ind_strutturale"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Banca c/c passivo"
            android:inputType="numberDecimal|numberSigned"
            android:minHeight="48dp" />

        <EditText
