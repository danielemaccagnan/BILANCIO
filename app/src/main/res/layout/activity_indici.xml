            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/cassa_ind_liquidità_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Denaro e valori in cassa"
            android:inputType="numberDecimal|numberSigned"
            android:minHeight="48dp" />

        <EditText
            android:id="@+id/banca_ind_liquidità_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Depositi bancari e postali"
            android:inputType="numberDecimal|numberSigned"
            android:minHeight="48dp" />

        <EditText
            android:id="@+id/crediti_ind_liquidità_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Crediti verso clienti"
            android:inputType="numberDecimal|numberSigned"
            android:minHeight="48dp" />

