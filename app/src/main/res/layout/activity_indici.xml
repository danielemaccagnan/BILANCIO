            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/pas_brevetermine_ind_esigibilità"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Passività a breve termine"
            android:inputType="numberDecimal|numberSigned"
            android:minHeight="48dp" />

        <EditText
            android:id="@+id/patrimonio_netto_ind_esigibilità"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Capitale di terzi"
            android:inputType="numberDecimal|numberSigned"
            android:minHeight="48dp" />

        <TextView
            android:layout_width="317dp"
            android:layout_height="wrap_content"
            android:text="GRADO DI RIGIDITÀ DELL'ATTIVO"
            android:textColor="#FF0000"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/attivo_fisso_netto_ind_rigidità_attivo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Attivo fisso netto"
            android:inputType="numberDecimal|numberSigned"
            android:minHeight="48dp" />

        <EditText
            android:id="@+id/attivo_totale_netto_ind_rigidità_attivo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
